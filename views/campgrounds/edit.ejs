<% layout('layout/boilerplate') %>
    <h1>Edit Campground</h1>
    <form action="/campgrounds/<%=campground._id%>?_method=PUT" method="POST">
        <label for="title">Title:</label>
        <input type="text" id="title" name="title" value="<%= campground.title %>" required><br>

        <label for="location">Location:</label>
        <input type="text" id="location" name="location" value="<%= campground.location %>" required><br>

        <label for="price">Price:</label>
        <input type="number" id="price" name="price" value="<%= campground.price %>" required><br>

        <label for="description">Description:</label>
        <textarea id="description" name="description" required></textarea><br>

        <button type="submit">Update Campground</button>
    </form> 
    <a href="/campgrounds/<%= campground._id %>">Back to Campgrounds</a>
